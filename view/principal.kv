#: import utils kivy.utils
#:import button kivy.uix.button
#:import sla kivy.adapters.simplelistadapter
<Menu>:
    FloatLayout:
        canvas:
            Color:
                rgba: utils.get_color_from_hex("#DEE2EC")
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Cadastrar produto'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: 0.6, 0.2
            on_press: root.manager.current = 'cadastro'

        Button:
            text: 'Listar produtos'
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            size_hint: 0.6, 0.2
            on_press: root.manager.current = 'listar'

<Entrada@TextInput>:
    size_hint: 0.6, 0.07
    write_tab: False

<BotaoPadrao@Button>:
    size_hint: 0.2, 0.1
    
<Cadastro>:
    FloatLayout:
        orientation: 'vertical'
        Label:
            text: "Cadastro de açúcar produto"
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}

        Label:
            text: "Nome"
            pos_hint: {'center_x':0.1, 'center_y':0.8}

        Entrada:
            id: p_nome
            pos_hint: {'center_x':0.5, 'center_y':0.8}

        Label:
            text: "Preço"
            pos_hint: {'center_x':0.1, 'center_y':0.65}

        Entrada:
            id: p_preco
            pos_hint: {'center_x':0.5, 'center_y':0.65}

        Label:
            text: "Estoque"
            pos_hint: {'center_x':0.1, 'center_y':0.5}

        Entrada:
            id: p_estoque
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            
        Label:
            text: "Estoque Mínimo"
            pos_hint: {'center_x':0.1, 'center_y':0.35}

        Entrada:
            id: p_estoque_min
            pos_hint: {'center_x':0.5, 'center_y':0.35}


        BotaoPadrao:
            text: "Salvar"
            pos_hint:{'center_x': 0.8, 'center_y': 0.15}
            on_press: root.salva_produto()
            
        BotaoPadrao:
            text: "Menu"
            pos_hint:{'center_x': 0.4, 'center_y': 0.15}
            on_press: root.manager.current = 'menu'
            
<Lista>:
    BoxLayout:
        ListView:
            adapter:
                sla.SimpleListAdapter(
                data=["Item #{0}".format(i) for i in root.manager.cadastro.produtos],
                cls=button.Button)